<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".project.view.ListaFilmeActivity">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rvListaFilme"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="3dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" >

    </android.support.v7.widget.RecyclerView>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fbAdicionarFilme"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="8dp"
        android:clickable="false"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="@+id/rvListaFilme"
        app:layout_constraintEnd_toEndOf="@+id/rvListaFilme"
        app:srcCompat="@drawable/ic_add_new_24dp" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fbEditarFilme"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="8dp"
        android:clickable="false"
        app:backgroundTint="@color/colorPrimary"
        app:layout_constraintBottom_toTopOf="@+id/fbAdicionarFilme"
        app:layout_constraintEnd_toEndOf="@+id/rvListaFilme"
        app:srcCompat="@drawable/ic_edit_white_24dp" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fbDeletarFilme"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="8dp"
        android:clickable="false"
        app:backgroundTint="@color/design_default_color_primary"
        app:layout_constraintBottom_toTopOf="@+id/fbEditarFilme"
        app:layout_constraintEnd_toEndOf="@+id/rvListaFilme"
        app:srcCompat="@drawable/ic_delete_white_24dp" />

</android.support.constraint.ConstraintLayout>